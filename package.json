{
  "name": "VSCodeReader",
  "displayName": "VSCodeReader",
  "description": "VSCodeReader",
  "version": "0.0.9",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "摸鱼",
    "阅读",
    "侧边栏阅读",
    "VSCodeReader",
    "read",
    "reader"
  ],
  "icon": "assets/Logo.png",
  "activationEvents": [
    "onView:sidebar"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/miyoyi/VSCodeReader.git"
  },
  "publisher": "miyoyi",
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "extension.openFile",
        "title": "VSCodeReader"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "VSCodeReader",
          "title": "VSCodeReader",
          "icon": "./Logo.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "VSCodeReader.readerView",
          "type": "webview",
          "name": "VSCodeReader"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "VSCodeReader.lastOpenedFile": {
          "type": "string",
          "default": ""
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "build": "npm run package && vsce package"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "20.2.5",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "typescript": "^5.1.3",
    "ts-loader": "^9.4.3",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.1",
    "@vscode/test-electron": "^2.3.2"
  },
  "dependencies": {
    "chardet": "^1.6.0",
    "fs": "0.0.1-security",
    "iconv-lite": "^0.6.3",
    "mammoth": "^1.6.0"
  }
}
